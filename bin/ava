#!/usr/bin/env node

var program = require('commander')

var ran = false;
program
  .version('0.0.1')

program
  .command('server')
  .description('start a local server')
  .action(function() {
    ran = true;
    require('../lib/server')
  });

// TODO: ava update, looks at a yml file for update dir

program.parse(process.argv)

if(!ran) {
  program.outputHelp()
}


